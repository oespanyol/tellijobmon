{% include 'base.jinja2' %}

{% block extra_stylesheets %}
  <link href="https://cdn.datatables.net/1.10.10/css/jquery.dataTables.css" rel="stylesheet">
{% endblock %}

{% block content %}
  <div class="row-fluid">
    <div class="col-lg-12">
      <h2>File Details</h2>
      <table id="file_details" class="table table-condensed table-striped table-hover" cellspacing="0" width="80%">
        <thead>
          <tr>
            <th>Parameter</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
{% endblock %}

{% block extra_javascripts %}
    <style>
    /* hide general search */
    .dataTables_filter {
      visibility: hidden
    }
  </style>
  <script src="https://cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js"></script>
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function(){
      var table = $('#file_details').DataTable({
        "processing": false,
        "serverSide": true,
        "ajax": {
          "url": "{{ request.route_path('file') }}",
          "data": { "file_id": "{{ request.matchdict['id']}}" }
        }
      });
    });
  </script>
{% endblock %}