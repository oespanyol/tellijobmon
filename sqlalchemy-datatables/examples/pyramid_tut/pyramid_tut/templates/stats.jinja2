{% include 'base.jinja2' %}

{% block content %}
  <div class="row-fluid">
    <div class="col-lg-12">
      <table id="dt_stats" class="table table-striped table-hover"
             cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>Time Slot</th>
            <th>Total Files</th>
            <th>Total Bytes</th>
            <th>Recipient</th>
            <th>Sent Files</th>
            <th>Received Files</th>
            <th>Sent Bytes</th>
            <th>Received Bytes</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
{% endblock %}

{% block extra_javascripts %}
 
  <script src="https://tdamsma.github.io/datatables-yadcf-bootstrap-webpack/bundle-yadcf.js"></script>

  <script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
      var table = $('#dt_stats').DataTable({
        "processing": false,
        "serverSide": true,
        "lengthMenu": [ 10, 100, 1000, 5000],
        "ajax": "{{ request.route_path('stats_data') }}"
      });

      yadcf.init(table, [{
        column_number: 0,
        filter_type: "range_date",
        date_format: "yyyy-mm-dd hh:MM:ss",
        moment_date_format: "YYYY-MM-DD HH:mm:ss",
        datepicker_type: 'bootstrap-datetimepicker',
        filter_plugin_options: {
          showTodayButton: true,
          showClear: true,
          sideBySide: true,
          format: "YYYY-MM-DD HH:mm:ss"
        }
      }, {
        column_number: 1,
        filter_type: "range_number",
        select_type: "select2"
      }, {
        column_number: 2,
        filter_type: "range_number",
        select_type: "select2"
      }, {
        column_number: 3,
        filter_type: "multi_select",
        select_type: "chosen"
      }, {
        column_number: 4,
        filter_type: "range_number",
        select_type: "select2"
      }, {
        column_number: 5,
        filter_type: "range_number",
        select_type: "select2"
      }, {
        column_number: 6,
        filter_type: "range_number",
        select_type: "select2"
      }, {
        column_number: 7,
        filter_type: "range_number",
        select_type: "select2"
      }]);
    });
  </script>

{% endblock %}