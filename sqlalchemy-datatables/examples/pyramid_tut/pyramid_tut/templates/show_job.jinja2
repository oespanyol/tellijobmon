{% include 'base.jinja2' %}

{% block extra_stylesheets %}
  <link href="https://cdn.datatables.net/1.10.10/css/jquery.dataTables.css" rel="stylesheet">
{% endblock %}

{% block content %}
  <div class="row-fluid">
    <div class="col-lg-12">
      <h2>Job Details</h2>
      <table id="job_details" class="table table-striped" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>Parameter</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
{% endblock %}

{% block extra_javascripts %}
  <script src="https://cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js"></script>
  <script type="text/javascript" charset="utf-8">
    $(document).ready(function(){
      var table = $('#job_details').DataTable({
        "processing": false,
        "serverSide": true,
        "ajax": "{{ request.route_path('job') }}"
      });
    });
  </script>
{% endblock %}