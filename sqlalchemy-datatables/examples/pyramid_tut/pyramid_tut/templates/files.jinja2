{% include 'base.jinja2' %}

{% block content %}
  <div class="row-fluid">
    <div class="col-lg-12">
      <table id="dt_files" class="table table-striped table-hover"
             cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>File Id</th>
            <th>Acknowledge Id</th>
            <th>File name</th>
            <th>File size</th>
            <th>Timestamp</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
{% endblock %}

{% block extra_javascripts %}
 
  <script src="https://tdamsma.github.io/datatables-yadcf-bootstrap-webpack/bundle-yadcf.js"></script>

  <script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
      var table = $('#dt_files').DataTable({
        "processing": false,
        "serverSide": true,
        "lengthMenu": [ 10, 100, 1000, 5000],
        "columnDefs": [{
            targets: 1,
            render: function (data, type, row, meta) {
                if (type === 'display') {
                    data = '<a href="show_job?acknowledge_id=' + encodeURIComponent(data) + '">' + data + '</a>';
                }
                return data;
            }
        }],
        "ajax": "{{ request.route_path('files_data') }}"
      });

      yadcf.init(table, [{
        column_number: 0,
        filter_type: "yadcf_text"
      }, {
        column_number: 1,
        filter_type: "yadcf_text",
        select_type: "chosen"
      }, {
        column_number: 2,
        filter_type: "text",
        select_type: "chosen"
      }, {
        column_number: 3,
        filter_type: "range_number",
        select_type: "chosen"
      }, {
        column_number: 4,
        filter_type: "range_date",
        date_format: "yyyy-mm-dd hh:MM:ss",
        moment_date_format: "YYYY-MM-DD HH:mm:ss",
        datepicker_type: 'bootstrap-datetimepicker',
        filter_plugin_options: {
          showTodayButton: true,
          showClear: true,
          sideBySide: true,
          format: "YYYY-MM-DD HH:mm:ss"
        }
      }]);
    });
  </script>

{% endblock %}