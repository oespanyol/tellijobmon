{% include 'base.jinja2' %}

{% block extra_stylesheets %}
  <link href="https://cdn.datatables.net/1.10.10/css/jquery.dataTables.css" rel="stylesheet">
{% endblock %}

{% block content %}
  <div class="row-fluid">
    <div class="col-lg-12">
      <h2>Rolling Monitoring</h2>
      <table id="dt_roll_mon" class="table table-striped table-hover" cellspacing="0" width="100%" >
        <thead>
          <tr>
            <th>Time Slot</th>
            {% for recipient in recipients %}
            <th>{{ recipient }}</th>
            {% endfor %}
          </tr>
          {% for key in roll_mon_dict.keys() %}
          <tr>
            <td>{{ key }}</td>
            {% for recipient in recipients %}
            <td>
            {% if roll_mon_dict[key][recipient] %}
              {{ roll_mon_dict[key][recipient]['recvf'] }} of {{ roll_mon_dict[key][recipient]['sentf'] }}
            {% else %}
              0 of 0
            {% endif %}
            </td>
            {% endfor %}
          </tr>
          {% endfor %}
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
{% endblock %}
